<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

<!-- ================================================ Form Bean Definitions -->

    <form-beans>

    </form-beans>

<!-- ========================================= Global Exception Definitions -->

    <global-exceptions>
    </global-exceptions>

<!-- =========================================== Global Forward Definitions -->

    <global-forwards>
        <forward name="home" path="/home.do"/>
    </global-forwards>

<!-- =========================================== Action Mapping Definitions -->

    <action-mappings>
        <action path="/home" forward="/WEB-INF/home.jsp"/>
        <action path="/master/item/regist/index" forward="/WEB-INF/master/item/regist/index.jsp"/>
        <action path="/master/item/regist/confirm" type="com.example.demo.web.master.item.ItemConfirmAction">
            <forward name="ok" path="/WEB-INF/master/item/regist/confirm.jsp"/>
        </action>
        <action path="/master/item/regist/regist" type="com.example.demo.web.master.item.ItemRegistAction">
            <forward name="ok" path="/WEB-INF/master/item/regist/complete.jsp"/>
            <forward name="ng" path="/master/item/regist/index"/>
        </action>
    </action-mappings>

<!-- ======================================== Message Resources Definitions -->

    <message-resources parameter="MessageResources" />

  <!-- =================================================== Validator plugin -->

  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property
        property="pathnames"
        value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml"/>
  </plug-in>

</struts-config>
